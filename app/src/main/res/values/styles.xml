<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Flipp.Typography.Title" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.TitleSubdued" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.Header" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.SubHeader" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default4</item>
    </style>

    <style name="Flipp.Typography.Body" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.BodySmall" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.BodyStrong" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.Price" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.CallOut" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

    <style name="Flipp.Typography.FinePrint" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default4</item>
    </style>

    <style name="Flipp.Typography.FinePrintStrong" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default5</item>
    </style>

</resources>
