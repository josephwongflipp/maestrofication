<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tabTitle"
        style="@style/Flipp.Typography.Body"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/new1"
        android:gravity="center"
        android:lines="1"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:text="TAB TITLE"
        android:textColor="@color/new3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/selected"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/error3"
        app:layout_constraintBottom_toBottomOf="@id/tabTitle"
        app:layout_constraintLeft_toLeftOf="@id/tabTitle"
        app:layout_constraintRight_toRightOf="@id/tabTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>